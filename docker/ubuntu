FROM ubuntu:latest

ARG antares-deps-version

ENV DEBIAN_FRONTEND noninteractive

# Install requirements : update repo
RUN apt-get update -y --fix-missing
    
# Install requirements
RUN apt-get install -y build-essential git cmake \
    wget  \
    unzip \
    libssl-dev libuuid1 uuid-dev libssh2-1 libssh2-1-dev libidn2-dev libidn11 libidn11-dev libwxgtk3.0-gtk3-dev libb64-dev \
    libboost-test-dev libboost-filesystem-dev libboost-regex-dev libboost-dev

# Install xpansion requirements
RUN git clone https://github.com/google/googletest.git --single-branch &&\
    cd googletest &&\
    cmake . &&\
    cmake --build . --target install &&\
    cd .. &&\
    rm -rf googletest &&\
    apt-get install -y libjsoncpp-dev libgtest-dev libboost-mpi-dev libboost-program-options-dev
    
# Add python and pip installation for antares-xpansion : TODO use requirements.txt file to indicate requirements
RUN apt-get install -y python3-pip &&\
    python3 -m pip install --upgrade pip &&\
    pip3 install pyinstaller pyyaml pytest numpy touch pytest-cov mkdocs mkdocs-material

# Download and extract pre-compiled libraries
RUN wget https://github.com/AntaresSimulatorTeam/antares-deps/releases/download/v$antares-deps-version/rte-antares-deps-ubuntu-20.04-Release-solver.tar.gz
RUN tar -xvf rte-antares-deps-ubuntu-20.04-Release-solver.tar.gz
RUN rm -rf rte-antares-deps-ubuntu-20.04-Release-solver.tar.gz